{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "./src/**/*",
    "./src/**/*.scss",
    "./src/**/*.css"
  ],
  "exclude": [
    "./node_modules",
    "./build",
    "**/*.spec.ts",
    "./webpack.config.js"
  ]
}
