{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "ES6",
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "outDir": "build",
      "sourceMap": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react",
      "allowJs": true,
      "noEmit": true
    },
    "include": [
      "src/**/*",
      "src/**/*.scss",
      "src/**/*.css"
    ],
    "exclude": [
      "node_modules",
      "build",
      "**/*.spec.ts",
    ]
  }
  